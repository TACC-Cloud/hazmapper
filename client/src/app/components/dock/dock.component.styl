@import '../../../variables.styl'

:host
  height auto
  .dock-button
    padding: 10px;
    cursor: pointer
    border-bottom 1px solid lightGrey
    text-align center
    &.active
      background-color backgroundHighlight

  .dock-button-label
    font-size 0.5em
    line-height 0.5
    color #6a6a6a

  .dock-button-icon
    display: inline-block;
    border: none;
    pointer-events: none;


