@import '../../../variables.styl'

:host
  .map-visibility input[type="checkbox"],
  .map-visibility .checked
    display: none
  .map-visibility input[type="checkbox"]:checked ~ .checked
    display: inline-block
  .map-visibility input[type="checkbox"]:checked ~ .unchecked
    display: none;
  .overlay
    padding-bottom 5px
    vertical-align bottom
    cursor pointer
    align-items center
    .panel-thumbnail
      padding-right 5px
    .overlay-label
      font-size 0.8em
    .active-overlay
      background-color lightgreen
    >.overlay-content
      padding 5px;
      .button-no-margin
        margin 0
