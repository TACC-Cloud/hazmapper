@import '../../../variables.styl'

:host
  .accounts-box
    padding: 0px 3px 15px 3px
    margin: 10px
  .account-text-wrapper
    display: block
    font-size: 20px
    height 100%
    width: 100%
    text-align: center
  .account-text
    text-overflow: ellipsis
    white-space: nowrap
    overflow: hidden
    display: inline-block
    width: 90%
    vertical-align: middle
  .auth-button
    margin: 0.5rem
  .auth-info
    font-size: 12px
    margin-bottom: 20px
  .auth-info-button-container
    display: flex
    flex-direction: row
    justify-content: center