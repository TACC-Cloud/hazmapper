@import '../../../variables.styl'

:host
  // .publish-container
  //   display: flexbox
  .publish-button
    margin-top: 1.5rem
    margin-bottom: 0.5rem
    margin-right: 0.5rem
  .auth-button
    margin: 0.5rem
  .auth-info
    font-size: 12px
    margin-bottom: 20px
  .auth-info-button-container
    display: flex
    flex-direction: row
    justify-content: center
  .sequence-name
    font-size: 12px
  .sequence-container
    padding: 0px 0px
    cursor: pointer
  .sequence-container:hover
    background-color: #E6E6E6
  .accounts-box
    padding: 0px 3px 15px 3px
    margin: 10px
  .upload-box
    padding: 0px 3px 15px 3px
    margin: 10px
    border-bottom: solid 1px
  .upload-box-name
    font-weight: bold
  .upload-info-box  
    // border: solid 1px
    // padding: 8px
    padding: 0px
  .upload-info-message
    font-size: 12px
  .upload-info-status
    margin: 5px 0px 10px 0px
    height: 30px
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: center
  .progress
    margin-bottom: 0px
  // TODO Change name to more general
  .upload-info-button-container
    display: flex
    flex-direction: row
    justify-content: flex-end
    .upload-info-button
      margin: 0px 0px 0px 5px
::ng-deep
  .tabs-title
    .nav-link
      padding: 0.5rem
